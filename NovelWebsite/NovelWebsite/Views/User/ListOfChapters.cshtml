@using NovelWebsite.Extensions
@model List<ChapterEntity>

@{
    int pageSize = (int)ViewBag.pageSize;
    int pageCount = (int)ViewBag.pageCount;
    int pageNumber = (int)ViewBag.pageNumber;
    int userId = ViewBag.userId;
}


<link rel="stylesheet" href="~/css/userprofile.css">
<link rel="stylesheet" href="~/css/admin/adminbook.css">
<link href="~/css/listchapter.css" rel="stylesheet" />
<main>
    @await Component.InvokeAsync("UserNavbar")

    <div class="body flex-grow-1 px-3">
        <div class="container-lg">
            <div class="row">
                <div class="col-md-12 tieude">
                    <h4>Danh sách chương </h4>
                    <button><a href="/dang-tai/@userId/truyen/@Model[0].BookId/chuong">Thêm chương</a></button>
                </div>
                <div class="col-md-12">
                    <div class="table-responsive">
                        <table class="table border mb-0 table-striped">
                            <thead class="table-dark fw-semibold">
                                <tr class="align-middle">
                                    <th>STT</th>
                                    <th>Tên chương</th>
                                    <th>Lượt xem</th>
                                    <th>Yêu thích</th>
                                    <th>Cập nhật gần nhất</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @{
                                    foreach (var item in Model)
                                    {
                                        <tr class="align-middle">
                                            <td>
                                                <div>@item.ChapterId</div>
                                            </td>
                                            <td>
                                                <div>@item.ChapterName</div>
                                            </td>
                                            <td>
                                                <div>@item.Views</div>
                                            </td>
                                            <td>
                                                <div>@item.Likes</div>
                                            </td>
                                            <td>
                                                <div>@DateTimeExtension.TimeSpan((DateTime)item.UpdatedDate)</div>
                                            </td>
                                            <td>
                                                <div>
                                                    <button><a href="/dang-tai/@userId/truyen/@item.BookId/chuong/@item.ChapterId">Sửa</a></button>
                                                    <button><a href="">Xóa</a></button>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
                <div class="col-md-12">
                    <div class="box-footer">
                        <div class="box-footer-clearfix">
                            <ul class="pagination justify-content-end">
                                <li class="page-item">
                                    <a class="page-link" href="/dang-tai/@userId/truyen/@Model[0].BookId/danh-sach-chuong?pageNumber=@Math.Max(1, pageNumber - 1)">
                                        <span aria-hidden="true">&laquo;</span>
                                    </a>
                                </li>
                                @{
                                    for (int i = 1; i <= pageCount; ++i)
                                    {
                                        <li class="page-item"><a class="page-link" href="/dang-tai/@userId/truyen/@Model[0].BookId/danh-sach-chuong?pageNumber=@i">@i</a></li>
                                    }
                                }
                                <li class="page-item">
                                    <a class="page-link" href="/dang-tai/@userId/truyen/@Model[0].BookId/danh-sach-chuong?pageNumber=@Math.Min(pageNumber + 1, pageCount)">
                                        <span aria-hidden="true">&raquo;</span>
                                    </a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>
